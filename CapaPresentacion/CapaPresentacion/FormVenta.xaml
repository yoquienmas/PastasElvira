<Window x:Class="CapaPresentacion.FormVenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Venta - Pastas Elvira" Height="600" Width="800"
        Background="#fff8e1"
        FontFamily="Georgia"
        WindowStartupLocation="CenterScreen">

    <Border Background="White" CornerRadius="12" Padding="20"
            BorderBrush="#e2a42d" BorderThickness="2" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="🛍️ REGISTRO DE VENTA" FontSize="24" FontWeight="Bold"
                       Foreground="#a36b00" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <GroupBox Header="AGREGAR PRODUCTOS A LA VENTA" Grid.Row="1" FontWeight="Bold" Foreground="#a36b00">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Seleccionar Producto:" FontWeight="Bold" Foreground="#5c3a00"/>
                        <ComboBox x:Name="cboProductos" Width="250" Height="30" Margin="0,5,0,0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Cantidad:" FontWeight="Bold" Foreground="#5c3a00"/>
                        <TextBox x:Name="txtCantidad" Width="80" Height="30" Margin="0,5,0,0" Text="1"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <TextBlock Text="Precio Unitario:" FontWeight="Bold" Foreground="#5c3a00"/>
                        <TextBox x:Name="txtPrecioUnitario" Width="100" Height="30" Margin="0,5,0,0" IsReadOnly="True" Background="#f0f0f0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" VerticalAlignment="Bottom" Margin="10,0,0,0">
                        <Button x:Name="btnAgregar" Content="➕ Agregar" Width="120" Height="35"
                                Background="#4CAF50" Foreground="White" FontWeight="Bold"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GroupBox Header="ÍTEMS DE LA VENTA" Grid.Row="2" Margin="0,20,0,0" FontWeight="Bold" Foreground="#a36b00">
                <Border Background="White" CornerRadius="10" Padding="5" BorderBrush="#e2a42d" BorderThickness="2">
                    <DataGrid x:Name="dgvItemsVenta" AutoGenerateColumns="False" IsReadOnly="True" Background="White" BorderThickness="0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Producto" Binding="{Binding Producto.Nombre}" Width="*"/>
                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100"/>
                            <DataGridTextColumn Header="Precio Unitario" Binding="{Binding PrecioUnitario, StringFormat=C}" Width="120"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="120"/>
                            <DataGridTemplateColumn Header="Acción" Width="80">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="🗑️" Background="#f44336" Foreground="White" Padding="5"
                                                Click="btnEliminar_Click"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </GroupBox>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="TOTAL VENTA:" FontSize="16" FontWeight="Bold" Foreground="#a36b00"/>
                    <TextBlock x:Name="txtTotalVenta" FontSize="16" FontWeight="Bold" Foreground="#a36b00" Text="0.00" Margin="5,0,0,0"/>
                </StackPanel>

                <Button x:Name="btnRegistrarVenta" Content="✅ Registrar Venta" Width="150" Height="35"
                        Background="#e2a42d" Foreground="White" FontWeight="Bold"
                        Click="btnRegistrarVenta_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>