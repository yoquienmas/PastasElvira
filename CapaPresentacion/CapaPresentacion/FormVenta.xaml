<Window x:Class="CapaPresentacion.FormVenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Registro de Venta - Pastas Elvira" Height="700" Width="900"
        Background="#fff8e1"
        FontFamily="Georgia"
        WindowStartupLocation="CenterScreen">

    <Border Background="White" CornerRadius="12" Padding="20"
            BorderBrush="#e2a42d" BorderThickness="2" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Grid.Row="0" Text="🛍️ REGISTRO DE VENTA" FontSize="24" FontWeight="Bold"
                       Foreground="#a36b00" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- Información del Cliente y Vendedor -->
            <GroupBox Grid.Row="1" Header="INFORMACIÓN DE LA VENTA" FontWeight="Bold" Foreground="#a36b00">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Información del Cliente -->
                    <StackPanel Grid.Column="0" Margin="0,0,10,0">
                        <TextBlock Text="CLIENTE:" FontWeight="Bold" Foreground="#5c3a00" Margin="0,0,0,5"/>
                        <ComboBox x:Name="cboClientes" Height="30" Margin="0,0,0,10" 
              SelectionChanged="cboClientes_SelectionChanged"
              ToolTip="Seleccione un cliente de la lista"/>

                        <TextBlock Text="DOCUMENTO:" FontWeight="Bold" Foreground="#5c3a00" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtDocumentoCliente" Height="30" Margin="0,0,0,10" IsReadOnly="True"/>

                        <TextBlock Text="TELÉFONO:" FontWeight="Bold" Foreground="#5c3a00" Margin="0,0,0,5"/>
                        <TextBox x:Name="txtTelefonoCliente" Height="30" Margin="0,0,0,10" IsReadOnly="True"/>
                    </StackPanel>

                    <!-- Información del Vendedor -->
                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="VENDEDOR:" FontWeight="Bold" Foreground="#5c3a00" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtVendedor" Height="30" VerticalAlignment="Center" 
              FontWeight="Bold" Foreground="#a36b00" Text="Cargando..." Background="#f9f9f9" Padding="5"/>

                        <TextBlock Text="FECHA:" FontWeight="Bold" Foreground="#5c3a00" Margin="0,10,0,5"/>
                        <TextBlock x:Name="txtFecha" Height="30" VerticalAlignment="Center" 
              FontWeight="Bold" Text="{Binding}" Background="#f9f9f9" Padding="5"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Agregar Productos -->
            <GroupBox Grid.Row="2" Header="AGREGAR PRODUCTOS" FontWeight="Bold" Foreground="#a36b00" Margin="0,10,0,0">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0">
                        <TextBlock Text="Producto:" FontWeight="Bold" Foreground="#5c3a00"/>
                        <ComboBox x:Name="cboProductos" Width="250" Height="30" Margin="0,5,0,0"
                                 SelectionChanged="cboProductos_SelectionChanged"/>
                    </StackPanel>

                    <StackPanel Grid.Column="1" Margin="10,0,0,0">
                        <TextBlock Text="Cantidad:" FontWeight="Bold" Foreground="#5c3a00"/>
                        <TextBox x:Name="txtCantidad" Width="80" Height="30" Margin="0,5,0,0" Text="1"/>
                    </StackPanel>

                    <StackPanel Grid.Column="2" Margin="10,0,0,0">
                        <TextBlock Text="Precio:" FontWeight="Bold" Foreground="#5c3a00"/>
                        <TextBox x:Name="txtPrecioUnitario" Width="100" Height="30" Margin="0,5,0,0" 
                                IsReadOnly="True" Background="#f0f0f0"/>
                    </StackPanel>

                    <StackPanel Grid.Column="3" Margin="10,0,0,0">
                        <TextBlock Text="Stock:" FontWeight="Bold" Foreground="#5c3a00"/>
                        <TextBlock x:Name="txtStockDisponible" Width="80" Height="30" Margin="0,5,0,0" 
                                  Background="#f0f0f0" VerticalAlignment="Center" Padding="5"/>
                    </StackPanel>

                    <StackPanel Grid.Column="4" VerticalAlignment="Bottom" Margin="10,0,0,0">
                        <Button x:Name="btnAgregar" Content="➕ Agregar" Width="120" Height="35"
                                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                Click="btnAgregar_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Items de la Venta -->
            <GroupBox Grid.Row="3" Header="DETALLE DE LA VENTA" Margin="0,10,0,0" FontWeight="Bold" Foreground="#a36b00">
                <Border Background="White" CornerRadius="10" Padding="5" BorderBrush="#e2a42d" BorderThickness="2">
                    <DataGrid x:Name="dgvItemsVenta" AutoGenerateColumns="False" IsReadOnly="True" 
                             Background="White" BorderThickness="0" Height="200">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" Width="*"/>
                            <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80"/>
                            <DataGridTextColumn Header="Precio Unit." Binding="{Binding PrecioUnitario, StringFormat=C}" Width="100"/>
                            <DataGridTextColumn Header="Subtotal" Binding="{Binding Subtotal, StringFormat=C}" Width="120"/>
                            <DataGridTemplateColumn Header="Quitar" Width="60">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="🗑️" Background="#f44336" Foreground="White" Padding="5"
                                                Click="btnEliminar_Click" ToolTip="Eliminar producto"
                                                Cursor="Hand" FontSize="10"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </GroupBox>

            <!-- Total y Botones -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="0,0,20,0">
                    <TextBlock Text="TOTAL VENTA:" FontSize="16" FontWeight="Bold" Foreground="#a36b00"/>
                    <TextBlock x:Name="txtTotalVenta" FontSize="20" FontWeight="Bold" 
                              Foreground="#e53935" Text="$ 0.00" Margin="0,5,0,0"/>
                </StackPanel>

                <Button x:Name="btnImprimir" Content="🖨️ Imprimir" Width="120" Height="35"
                        Background="#2196F3" Foreground="White" FontWeight="Bold" Margin="0,0,10,0"
                        Click="btnImprimir_Click" ToolTip="Imprimir factura"/>

                <Button x:Name="btnRegistrarVenta" Content="✅ Registrar Venta" Width="150" Height="35"
                        Background="#e2a42d" Foreground="White" FontWeight="Bold"
                        Click="btnRegistrarVenta_Click" ToolTip="Registrar venta en el sistema"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>