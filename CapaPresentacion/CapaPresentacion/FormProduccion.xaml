<Window x:Class="CapaPresentacion.FormProduccion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario de Producción" Height="768" Width="1366"
        Background="#fff8e1"
        FontFamily="Georgia"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style x:Key="DataGridTextCenterStyle" TargetType="TextBlock">
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>

    <!-- ✅ CORREGIDO: Agregado x:Name="BorderPrincipal" -->
    <Border x:Name="BorderPrincipal" Background="White" CornerRadius="12" Padding="20"
            BorderBrush="#e2a42d" BorderThickness="2" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="🍝 GESTIÓN DE PRODUCCIÓN" FontSize="24" FontWeight="Bold"
                       Foreground="#a36b00" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <GroupBox Header="GESTIONAR PRODUCCIÓN" Grid.Row="1" FontWeight="Bold" Foreground="#a36b00">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Producto:" Grid.Row="0" Grid.Column="0" Margin="0,5,5,5" VerticalAlignment="Center" Foreground="#5c3a00"/>
                    <ComboBox x:Name="cboProductos" Grid.Row="0" Grid.Column="1" Margin="0,5,10,5"
              DisplayMemberPath="NombreProducto" SelectedValuePath="IdProducto"/>

                    <TextBlock Text="Cantidad:" Grid.Row="0" Grid.Column="2" Margin="10,5,5,5" VerticalAlignment="Center" Foreground="#5c3a00"/>
                    <TextBox x:Name="txtCantidad" Grid.Row="0" Grid.Column="3" Margin="0,5,0,5"
             ToolTip="Ingrese la cantidad a producir"
             PreviewTextInput="txtCantidad_PreviewTextInput"/>

                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
                        <Button x:Name="btnRegistrar" Content="➕ Registrar" Width="120" Height="35" Margin="5"
                                Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                Click="btnRegistrar_Click"/>
                        <Button x:Name="btnEditar" Content="✏️ Editar" Width="120" Height="35" Margin="5"
                                Background="#FF9800" Foreground="White" FontWeight="Bold"
                                Click="btnEditar_Click" IsEnabled="False"/>
                        <Button x:Name="btnEliminar" Content="🗑️ Eliminar" Width="120" Height="35" Margin="5"
                                Background="#F44336" Foreground="White" FontWeight="Bold"
                                Click="btnEliminar_Click" IsEnabled="False"/>
                        <Button x:Name="btnCancelar" Content="❌ Cancelar" Width="120" Height="35" Margin="5"
                                Background="#607D8B" Foreground="White" FontWeight="Bold"
                                Click="btnCancelar_Click" IsEnabled="False"/>
                        <Button x:Name="btnHistorial" Content="📊 Ver Historial" Width="150" Height="35" Margin="5"
                                Background="#e2a42d" Foreground="White" FontWeight="Bold"
                                Click="btnHistorial_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <GroupBox Header="PRODUCCIONES RECIENTES" Grid.Row="2" Margin="0,20,0,0" FontWeight="Bold" Foreground="#a36b00">
                <Border Background="White" CornerRadius="10" Padding="5"
                        BorderBrush="#e2a42d" BorderThickness="2">
                    <DataGrid x:Name="dgvProducciones" AutoGenerateColumns="False" IsReadOnly="True"
              SelectionMode="Single"
              Background="White" BorderThickness="0" 
              SelectionChanged="dgvProducciones_SelectionChanged"
              HeadersVisibility="Column"
              VerticalGridLinesBrush="#e0e0e0" HorizontalGridLinesBrush="#e0e0e0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdProduccion}" Width="60" 
                           ElementStyle="{StaticResource DataGridTextCenterStyle}"/>
                            <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" Width="*"/>
                            <DataGridTextColumn Header="Cantidad" Binding="{Binding CantidadProducida}" Width="100"
                           ElementStyle="{StaticResource DataGridTextCenterStyle}"/>
                            <DataGridTextColumn Header="Fecha" Binding="{Binding FechaProduccion, StringFormat=dd/MM/yyyy HH:mm}" Width="160"/>
                            <DataGridTextColumn Header="Estado" Binding="{Binding Estado}" Width="80"
                           ElementStyle="{StaticResource DataGridTextCenterStyle}"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>
            </GroupBox>
        </Grid>
    </Border>
</Window>