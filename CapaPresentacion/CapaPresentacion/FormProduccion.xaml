<Window x:Class="CapaPresentacion.FormProduccion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario de Producción" Height="768" Width="1366"
        Background="#fff8e1" FontFamily="Georgia"
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="250"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Producción" FontSize="26" FontWeight="Bold" Foreground="#a36b00"/>

        <!-- Formulario -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="16"
                BorderBrush="#FFDA94" BorderThickness="2" Margin="0,10,0,272" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="300"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,0,519,0">

                    <TextBlock Text="Producto:" Foreground="#5c3a00" Margin="0,4,0,2"/>
                    <ComboBox x:Name="cmbProducto" Height="30" Margin="0,0,0,8"
                              DisplayMemberPath="Nombre" SelectedValuePath="IdProducto"
                              BorderBrush="#e2a42d" BorderThickness="1" Padding="4"/>

                    <TextBlock Text="Cantidad a Producir:" Foreground="#5c3a00" Margin="0,4,0,2"/>
                    <TextBox x:Name="txtCantidad" Height="30" Margin="0,0,0,8"
                             BorderBrush="#e2a42d" BorderThickness="1" Padding="4"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="btnRegistrar" Content="Registrar Producción" Width="160" Height="35" Margin="0,0,8,0"
                                Background="#e2a42d" Foreground="White" FontWeight="Bold"
                                Click="btnRegistrar_Click"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="Registrá nuevas producciones: seleccioná un producto y la cantidad a producir." 
                           TextWrapping="Wrap" FontStyle="Italic" Foreground="#5c3a00" FontSize="14"
                           VerticalAlignment="Top" Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- DataGrid: historial de producciones -->
        <DataGrid x:Name="dgvProduccion" Grid.Row="2" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single"
                  Margin="0,142,0,0" Background="White" BorderBrush="#e2a42d" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdProduccion}" Width="60"/>
                <DataGridTextColumn Header="Producto" Binding="{Binding NombreProducto}" Width="*"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="100"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha}" Width="160"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
