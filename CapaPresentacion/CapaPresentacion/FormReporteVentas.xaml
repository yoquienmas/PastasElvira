<Window x:Class="CapaPresentacion.FormReporteVentas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reporte de Ventas por Fecha" Height="600" Width="1000"
        Background="#fff8e1" FontFamily="Georgia">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Filtros -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Fecha Inicio:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker x:Name="dtpFechaInicio" Width="150" Margin="0,0,20,0"/>

            <TextBlock Text="Fecha Fin:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker x:Name="dtpFechaFin" Width="150" Margin="0,0,20,0"/>

            <Button x:Name="btnConsultar" Content="Consultar" Width="120"
                    Background="#e2a42d" Foreground="White" FontWeight="Bold"
                    Click="btnConsultar_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgvReporteVentas" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  Background="White" BorderBrush="#e2a42d" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Venta" Binding="{Binding IdVenta}" Width="80"/>
                <DataGridTextColumn Header="Fecha" Binding="{Binding Fecha, StringFormat=\{0:dd/MM/yyyy HH:mm\}}" Width="160"/>
                <DataGridTextColumn Header="Cliente" Binding="{Binding Cliente}" Width="*"/>
                <DataGridTextColumn Header="Usuario" Binding="{Binding Usuario}" Width="150"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat=C}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
