<Window x:Class="CapaPresentacion.MenuDueño"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Menu Dueño" Height="800" Width="1100"
        Background="#fff8e1" FontFamily="Georgia"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style TargetType="TextBlock">
            <Setter Property="FontFamily" Value="Georgia"/>
            <Setter Property="FontSize" Value="12"/>
        </Style>

        <!-- Estilo para botones con esquinas redondeadas -->
        <Style x:Key="RoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#9C27B0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Margin" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="5" 
                                BorderThickness="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <DockPanel>
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"
                Background="#e2a42d" Height="40" VerticalAlignment="Top">
                <TextBlock x:Name="txtFechaPrincipal" Margin="10,0" VerticalAlignment="Center"
                   Foreground="White" FontWeight="Bold"/>
                <TextBlock x:Name="txtUsuarioPrincipal" Margin="20,0" VerticalAlignment="Center"
                   Foreground="White" FontWeight="Bold"/>
                <Button Content="🚪 Cerrar Sesión" 
            Background="#6c757d" Foreground="White" FontWeight="Bold"
            Padding="10,5" Click="BtnCerrarSesion_Click"
            Cursor="Hand"/>
            </StackPanel>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#d4a36b" Padding="15" Grid.Row="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <!-- Si no tienes la imagen, puedes comentar esta línea -->
                        <!-- <Image Source="pack://application:,,,/Resources/logo.png"
                        Width="40" Height="40" Margin="0,0,10,0"/> -->
                        <TextBlock Text="PASTAS ELVIRA - MENÚ DUEÑO" FontSize="20" FontWeight="Bold"
                           Foreground="#5c3a00" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20"
                        BorderBrush="#e2a42d" BorderThickness="2" Margin="10,20,10,10">
                    <TabControl Background="Transparent" BorderThickness="0">
                        <TabItem Header="Dashboard">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel Margin="10">
                                    <!-- Estadísticas Rápidas -->
                                    <WrapPanel Margin="0,0,0,20">
                                        <Border Background="#e8f5e8" CornerRadius="10" Padding="20" Margin="5" Width="250">
                                            <StackPanel>
                                                <TextBlock Text="💰" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Text="VENTAS DEL MES" FontWeight="Bold" Foreground="#2e7d32" HorizontalAlignment="Center"/>
                                                <TextBlock x:Name="txtVentasMes" FontSize="18" Foreground="#2e7d32" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#fff3e0" CornerRadius="10" Padding="20" Margin="5" Width="250">
                                            <StackPanel>
                                                <TextBlock Text="👥" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Text="CLIENTES" FontWeight="Bold" Foreground="#f57c00" HorizontalAlignment="Center"/>
                                                <TextBlock x:Name="txtTotalClientes" FontSize="18" Foreground="#f57c00" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#e0f7fa" CornerRadius="10" Padding="20" Margin="5" Width="250">
                                            <StackPanel>
                                                <TextBlock Text="📦" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Text="PRODUCTOS VENDIDOS" FontWeight="Bold" Foreground="#00796B" HorizontalAlignment="Center"/>
                                                <TextBlock x:Name="txtProductosVendidos" FontSize="18" Foreground="#00796B" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="#ffcdd2" CornerRadius="10" Padding="20" Margin="5" Width="250">
                                            <StackPanel>
                                                <TextBlock Text="⚠️" FontSize="24" HorizontalAlignment="Center"/>
                                                <TextBlock Text="STOCK CRÍTICO" FontWeight="Bold" Foreground="#d32f2f" HorizontalAlignment="Center"/>
                                                <TextBlock x:Name="txtStockCritico" FontSize="18" Foreground="#d32f2f" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                                            </StackPanel>
                                        </Border>
                                    </WrapPanel>

                                    <!-- Botones de Acción -->
                                    <WrapPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                                        <Button Content="📊 REPORTES GENERALES" 
                                                Style="{StaticResource RoundedButton}"
                                                Background="#9C27B0"
                                                Click="btnReportesGenerales_Click"/>
                                        <Button Content="👥 GESTIÓN DE USUARIOS" 
                                                Style="{StaticResource RoundedButton}"
                                                Background="#FF5722"
                                                Click="btnGestionUsuarios_Click"/>
                                    </WrapPanel>

                                    <!-- Primera Fila de Gráficos -->
                                    <WrapPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                                        <!-- Gráfico Ventas por Tipo -->
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="10,5" Width="500"
                                                BorderBrush="#e2a42d" BorderThickness="2" Height="350">
                                            <StackPanel>
                                                <TextBlock Text="📈 VENTAS POR TIPO DE PRODUCTO" FontWeight="Bold" 
                                                          Foreground="#a36b00" Margin="0,0,0,10" FontSize="14" HorizontalAlignment="Center"/>
                                                <lvc:CartesianChart x:Name="chartVentasPorTipo" 
                                                                   Series="{Binding SeriesVentasPorTipo}"
                                                                   LegendLocation="Right" Height="250" Width="450">
                                                    <lvc:CartesianChart.AxisX>
                                                        <lvc:Axis Title="Tipos de Producto" Labels="{Binding LabelsVentasPorTipo}">
                                                            <lvc:Axis.Separator>
                                                                <lvc:Separator Step="1"/>
                                                            </lvc:Axis.Separator>
                                                        </lvc:Axis>
                                                    </lvc:CartesianChart.AxisX>
                                                    <lvc:CartesianChart.AxisY>
                                                        <lvc:Axis Title="Ventas ($)" LabelFormatter="{Binding Formatter}"/>
                                                    </lvc:CartesianChart.AxisY>
                                                </lvc:CartesianChart>
                                            </StackPanel>
                                        </Border>

                                        <!-- Gráfico Top Clientes -->
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="10,5" Width="500"
                                                BorderBrush="#e2a42d" BorderThickness="2" Height="350">
                                            <StackPanel>
                                                <TextBlock Text="🏆 TOP 5 CLIENTES" FontWeight="Bold" 
                                                          Foreground="#a36b00" Margin="0,0,0,10" FontSize="14" HorizontalAlignment="Center"/>
                                                <lvc:CartesianChart x:Name="chartTopClientes" 
                                                                   Series="{Binding SeriesTopClientes}"
                                                                   LegendLocation="Right" Height="250" Width="450">
                                                    <lvc:CartesianChart.AxisX>
                                                        <lvc:Axis Title="Clientes" Labels="{Binding LabelsTopClientes}">
                                                            <lvc:Axis.Separator>
                                                                <lvc:Separator Step="1"/>
                                                            </lvc:Axis.Separator>
                                                        </lvc:Axis>
                                                    </lvc:CartesianChart.AxisX>
                                                    <lvc:CartesianChart.AxisY>
                                                        <lvc:Axis Title="Total Gastado ($)" LabelFormatter="{Binding Formatter}"/>
                                                    </lvc:CartesianChart.AxisY>
                                                </lvc:CartesianChart>
                                            </StackPanel>
                                        </Border>
                                    </WrapPanel>

                                    <!-- Segunda Fila de Gráficos -->
                                    <WrapPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                                        <!-- Gráfico Productos Vendidos -->
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="10,5" Width="500"
                                                BorderBrush="#e2a42d" BorderThickness="2" Height="350">
                                            <StackPanel>
                                                <TextBlock Text="📦 PRODUCTOS MÁS VENDIDOS" FontWeight="Bold" 
                                                          Foreground="#a36b00" Margin="0,0,0,10" FontSize="14" HorizontalAlignment="Center"/>
                                                <lvc:CartesianChart x:Name="chartProductosVendidos" 
                                                                   Series="{Binding SeriesProductosVendidos}"
                                                                   LegendLocation="Right" Height="250" Width="450">
                                                    <lvc:CartesianChart.AxisX>
                                                        <lvc:Axis Title="Productos" Labels="{Binding LabelsProductosVendidos}">
                                                            <lvc:Axis.Separator>
                                                                <lvc:Separator Step="1"/>
                                                            </lvc:Axis.Separator>
                                                        </lvc:Axis>
                                                    </lvc:CartesianChart.AxisX>
                                                    <lvc:CartesianChart.AxisY>
                                                        <lvc:Axis Title="Cantidad Vendida"/>
                                                    </lvc:CartesianChart.AxisY>
                                                </lvc:CartesianChart>
                                            </StackPanel>
                                        </Border>

                                        <!-- Gráfico Stock Crítico -->
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="10,5" Width="500"
                                                BorderBrush="#e2a42d" BorderThickness="2" Height="350">
                                            <StackPanel>
                                                <TextBlock Text="⚠️ STOCK CRÍTICO" FontWeight="Bold" 
                                                          Foreground="#a36b00" Margin="0,0,0,10" FontSize="14" HorizontalAlignment="Center"/>
                                                <lvc:CartesianChart x:Name="chartStockCritico" 
                                                                   Series="{Binding SeriesStockCritico}"
                                                                   LegendLocation="Right" Height="250" Width="450">
                                                    <lvc:CartesianChart.AxisX>
                                                        <lvc:Axis Title="Productos" Labels="{Binding LabelsStockCritico}">
                                                            <lvc:Axis.Separator>
                                                                <lvc:Separator Step="1"/>
                                                            </lvc:Axis.Separator>
                                                        </lvc:Axis>
                                                    </lvc:CartesianChart.AxisX>
                                                    <lvc:CartesianChart.AxisY>
                                                        <lvc:Axis Title="Stock Actual"/>
                                                    </lvc:CartesianChart.AxisY>
                                                </lvc:CartesianChart>
                                            </StackPanel>
                                        </Border>
                                    </WrapPanel>

                                    <!-- Tablas Originales (Opcionales) -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="5"
                                                BorderBrush="#e2a42d" BorderThickness="2">
                                            <StackPanel>
                                                <TextBlock Text="📊 VENTAS POR TIPO DE PRODUCTO" FontWeight="Bold" Foreground="#a36b00" Margin="0,0,0,10"/>
                                                <DataGrid x:Name="dgvVentasPorTipo" AutoGenerateColumns="False" IsReadOnly="True"
                                                          Height="200" Width="400" Background="White" BorderThickness="0">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="*"/>
                                                        <DataGridTextColumn Header="Cantidad" Binding="{Binding Cantidad}" Width="80"/>
                                                        <DataGridTextColumn Header="Total Vendido" Binding="{Binding Total, StringFormat=C}" Width="120"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </StackPanel>
                                        </Border>

                                        <Border Background="White" CornerRadius="10" Padding="15" Margin="5"
                                                BorderBrush="#e2a42d" BorderThickness="2">
                                            <StackPanel>
                                                <TextBlock Text="🏆 TOP 5 CLIENTES" FontWeight="Bold" Foreground="#a36b00" Margin="0,0,0,10"/>
                                                <DataGrid x:Name="dgvTopClientes" AutoGenerateColumns="False" IsReadOnly="True"
                                                          Height="200" Width="400" Background="White" BorderThickness="0">
                                                    <DataGrid.Columns>
                                                        <DataGridTextColumn Header="Cliente" Binding="{Binding Nombre}" Width="*"/>
                                                        <DataGridTextColumn Header="Compras" Binding="{Binding CantidadCompras}" Width="80"/>
                                                        <DataGridTextColumn Header="Total Gastado" Binding="{Binding TotalGastado, StringFormat=C}" Width="120"/>
                                                    </DataGrid.Columns>
                                                </DataGrid>
                                            </StackPanel>
                                        </Border>
                                    </StackPanel>
                                </StackPanel>
                            </ScrollViewer>
                        </TabItem>
                    </TabControl>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>