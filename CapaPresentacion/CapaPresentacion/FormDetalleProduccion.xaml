<Window x:Class="CapaPresentacion.FormDetalleProduccion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Detalle de Producción" Height="600" Width="1000"
        Background="#fff8e1" FontFamily="Georgia"
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Detalle de Producción" FontSize="26" FontWeight="Bold" Foreground="#a36b00"/>

        <!-- Formulario -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="16"
                BorderBrush="#FFDA94" BorderThickness="2" Margin="0,10,0,272" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,0,519,0">

                    <TextBlock Text="Producción:" Foreground="#5c3a00"/>
                    <ComboBox x:Name="cmbProduccion" DisplayMemberPath="IdProduccion" SelectedValuePath="IdProduccion"
                              Height="30" Margin="0,0,0,8"/>

                    <TextBlock Text="Materia Prima:" Foreground="#5c3a00"/>
                    <ComboBox x:Name="cmbMateria" DisplayMemberPath="Nombre" SelectedValuePath="IdMateria"
                              Height="30" Margin="0,0,0,8"/>

                    <TextBlock Text="Cantidad Utilizada:" Foreground="#5c3a00"/>
                    <TextBox x:Name="txtCantidadUtilizada" Height="30" Margin="0,0,0,8"
                             BorderBrush="#e2a42d" BorderThickness="1" Padding="4"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button x:Name="btnAgregar" Content="Agregar" Width="100" Height="35" Margin="0,0,8,0"
                                Background="#e2a42d" Foreground="White" FontWeight="Bold"
                                Click="btnAgregar_Click"/>
                        <Button x:Name="btnEliminar" Content="Eliminar" Width="100" Height="35"
                                Background="#ff6b6b" Foreground="White" FontWeight="Bold"
                                Click="btnEliminar_Click"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="Asigná materias primas a una producción." 
                           TextWrapping="Wrap" FontStyle="Italic" Foreground="#5c3a00" FontSize="14"
                           VerticalAlignment="Top" Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid x:Name="dgvDetalleProduccion" Grid.Row="2" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single"
                  Margin="0,142,0,0" Background="White" BorderBrush="#e2a42d" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID Detalle" Binding="{Binding IdDetalleProduccion}" Width="80"/>
                <DataGridTextColumn Header="Producción" Binding="{Binding IdProduccion}" Width="120"/>
                <DataGridTextColumn Header="Materia Prima" Binding="{Binding NombreMateria}" Width="*"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding CantidadUtilizada}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
