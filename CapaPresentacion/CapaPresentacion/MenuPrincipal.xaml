<Window x:Class="CapaPresentacion.MenuPrincipal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Menú Principal - Pastas Elvira" Height="768" Width="1366"
        Background="#f5f5f5" FontFamily="Georgia"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid>
        <Border x:Name="pnlLogin" Background="White" CornerRadius="10" Margin="200"
                BorderBrush="#a36b00" BorderThickness="2" Visibility="Visible">
            <StackPanel Margin="30" VerticalAlignment="Center">

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                    <Image Source="pack:/Resources/logo.png" Width="60" Height="60" Margin="0,0,15,0"/>
                    <TextBlock Text="PASTAS ELVIRA" FontSize="24" FontWeight="Bold"
                              Foreground="#a36b00" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel>
                    <TextBlock Text="👤 Usuario:" FontWeight="Bold" Foreground="#a36b00" Margin="0,0,0,5"/>
                    <TextBox x:Name="txtLoginUsuario" Height="35" Padding="10" FontSize="14"
                             BorderBrush="#a36b00" BorderThickness="1" Background="#FFF9E6"
                             Foreground="#333333" CaretBrush="#a36b00"/>

                    <TextBlock Text="🔒 Contraseña:" FontWeight="Bold" Foreground="#a36b00"
                               Margin="0,10,0,5"/>
                    <PasswordBox x:Name="txtLoginClave" Height="35" Padding="10" FontSize="14"
                                 BorderBrush="#a36b00" BorderThickness="1" Background="#FFF9E6"
                                 Foreground="#333333" CaretBrush="#a36b00"
                                 KeyDown="txtLoginClave_KeyDown"/>

                    <Border x:Name="errorMessageBorder" Background="#FFF0F0" BorderBrush="Red" BorderThickness="1"
                            CornerRadius="5" Margin="0,15,0,0" Visibility="Collapsed" Padding="10">
                        <StackPanel>
                            <TextBlock x:Name="txtMensajeError" Foreground="Red" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap"/>
                        </StackPanel>
                    </Border>

                    <Button Content="INGRESAR" Width="150" Height="40" Margin="0,20,0,0"
                            Background="#a36b00" Foreground="White" FontWeight="Bold" FontSize="14"
                            HorizontalAlignment="Center" Click="BtnLogin_Click" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#a36b00"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="#8F5E00"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>

        <DockPanel x:Name="pnlPrincipal" Visibility="Collapsed">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal"
                        Background="#e2a42d" Height="40" VerticalAlignment="Top">
                <TextBlock x:Name="txtFechaPrincipal" Margin="10,0" VerticalAlignment="Center"
                           Foreground="White" FontWeight="Bold"/>
                <TextBlock x:Name="txtUsuarioPrincipal" Margin="20,0" VerticalAlignment="Center"
                           Foreground="White" FontWeight="Bold"/>
                <Button Content="Cerrar Sesión" Margin="20,0" Padding="10,5"
                        Background="Transparent" Foreground="White" BorderThickness="0"
                        Click="BtnCerrarSesion_Click" FontWeight="Bold"/>
            </StackPanel>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#a36b00" Padding="15" Grid.Row="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Image Source="pack://application:,,,/Resources/logo.png"
                               Width="40" Height="40" Margin="0,0,10,0"/>
                        <TextBlock Text="PASTAS ELVIRA - " FontSize="20" FontWeight="Bold"
                                   Foreground="White" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtRolUsuario" FontSize="20" FontWeight="Bold"
                                   Foreground="White" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <TabControl x:Name="tcMain" Grid.Row="1" Background="Transparent" BorderThickness="0">
                </TabControl>
            </Grid>
        </DockPanel>
    </Grid>
</Window>