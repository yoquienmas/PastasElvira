<Window x:Class="CapaPresentacion.FormConsumoPorVenta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Consumo de Materias Primas por Venta" Height="600" Width="900"
        Background="#fff8e1" FontFamily="Georgia">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Selección de Venta -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="ID Venta:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="txtIdVenta" Width="100" Margin="0,0,20,0"/>

            <Button x:Name="btnConsultar" Content="Consultar" Width="120"
                    Background="#e2a42d" Foreground="White" FontWeight="Bold"
                    Click="btnConsultar_Click"/>
        </StackPanel>

        <!-- DataGrid -->
        <DataGrid x:Name="dgvConsumoVenta" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  Background="White" BorderBrush="#e2a42d" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Materia Prima" Binding="{Binding MateriaPrima}" Width="*"/>
                <DataGridTextColumn Header="Cantidad Consumida" Binding="{Binding CantidadConsumida}" Width="200"/>
                <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
