<Window x:Class="CapaPresentacion.FormGestionarSabores"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Sabores de Producto" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#fff8e1"
        FontFamily="Georgia">

    <Border Background="White" CornerRadius="12" Padding="20"
            BorderBrush="#e2a42d" BorderThickness="2" Margin="15">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Título -->
            <TextBlock Grid.Row="0" Text="🍴 GESTIÓN DE SABORES DE PRODUCTO" 
                       FontSize="20" FontWeight="Bold"
                       Foreground="#a36b00" HorizontalAlignment="Center" 
                       Margin="0,0,0,20"/>

            <!-- Formulario de entrada -->
            <GroupBox Grid.Row="1" Header="NUEVO SABOR" FontWeight="Bold" 
                      Foreground="#a36b00" Margin="0,0,0,15">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Descripción:" Grid.Row="0" Grid.Column="0" 
                               Margin="0,5,10,5" VerticalAlignment="Center" 
                               Foreground="#5c3a00"/>
                    <TextBox x:Name="txtDescripcion" Grid.Row="0" Grid.Column="1" 
                             Margin="0,5,10,5" Height="30"
                             Background="White" Foreground="Black"
                             ToolTip="Ingrese la descripción del sabor de producto"/>

                    <CheckBox x:Name="chkActivo" Grid.Row="1" Grid.Column="1" 
                              Content="Sabor Activo" IsChecked="True"
                              Foreground="#5c3a00" Margin="0,10,0,5"/>

                    <StackPanel Grid.Row="0" Grid.RowSpan="2" Grid.Column="2" 
                                Orientation="Vertical" Margin="10,5,0,5">
                        <Button x:Name="btnAgregar" Content="➕ Agregar" 
                                Width="100" Height="35" Margin="0,0,0,5"
                                Background="#4CAF50" Foreground="White" 
                                FontWeight="Bold" Click="btnAgregar_Click"/>
                        <Button x:Name="btnLimpiar" Content="🔄 Limpiar" 
                                Width="100" Height="35"
                                Background="#6c757d" Foreground="White" 
                                FontWeight="Bold" Click="btnLimpiar_Click"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- DataGrid de Sabores -->
            <Border Grid.Row="2" Background="White" CornerRadius="10" Padding="5"
                    BorderBrush="#e2a42d" BorderThickness="1" Margin="0,0,0,15">
                <DataGrid x:Name="dgvSabores" AutoGenerateColumns="False"
                          SelectionChanged="dgvSabores_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding IdSabor}" Width="60"/>
                        <DataGridTextColumn Header="Descripción" Binding="{Binding Descripcion}" Width="*"/>
                        <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="80"/>
                        <DataGridTemplateColumn Header="Acciones" Width="120">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="btnEditarSabor" Content="✏️" 
                                                Width="30" Height="25" Margin="2"
                                                Background="#FF9800" Foreground="White"
                                                Click="btnEditarSabor_Click"
                                                ToolTip="Editar sabor"/>
                                        <Button x:Name="btnEliminarSabor" Content="❌" 
                                                Width="30" Height="25" Margin="2"
                                                Background="#f44336" Foreground="White"
                                                Click="btnEliminarSabor_Click"
                                                ToolTip="Eliminar sabor"/>
                                    </StackPanel>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- Botón cerrar -->
            <Button Grid.Row="3" Content="Cerrar" Width="100" Height="35"
                    HorizontalAlignment="Center" Background="#9C27B0" 
                    Foreground="White" FontWeight="Bold"
                    Click="btnCerrar_Click"/>
        </Grid>
    </Border>
</Window>