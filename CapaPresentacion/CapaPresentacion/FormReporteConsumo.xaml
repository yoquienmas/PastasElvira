<Window x:Class="CapaPresentacion.FormReporteConsumo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Reporte de Consumo de Materias Primas" Height="600" Width="900"
        Background="#fff8e1" FontFamily="Georgia"
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="66*"/>
            <ColumnDefinition Width="149*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="0,0,0,10" Grid.ColumnSpan="2">
            <TextBlock Text="Fecha Inicio:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker x:Name="dpFechaInicio" Width="150" Margin="0,0,20,0"/>

            <TextBlock Text="Fecha Fin:" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <DatePicker x:Name="dpFechaFin" Width="150" Margin="0,0,20,0"/>

            <Button x:Name="btnGenerar" Content="Generar Reporte" Width="150"
                    Background="#e2a42d" Foreground="White" FontWeight="Bold"
                    Click="btnGenerar_Click"/>
        </StackPanel>

        <DataGrid x:Name="dgvConsumo" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
                  Background="White" BorderBrush="#e2a42d" BorderThickness="1" Grid.ColumnSpan="2" SelectionChanged="dgvConsumo_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Materia Prima" Binding="{Binding MateriaPrima}" Width="*"/>
                <DataGridTextColumn Header="Cantidad Consumida" Binding="{Binding CantidadConsumida}" Width="200"/>
                <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock x:Name="lblTotal" Grid.Row="2" Grid.ColumnSpan="2" FontWeight="Bold" FontSize="16"
                   HorizontalAlignment="Right" Margin="0,10,0,0"/>
    </Grid>
</Window>