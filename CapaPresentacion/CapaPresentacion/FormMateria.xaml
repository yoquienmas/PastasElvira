<Window x:Class="CapaPresentacion.FormMateriaPrima"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Formulario de Materia Prima" Height="688" Width="911"
        Background="#fff8e1" FontFamily="Georgia"
        Loaded="Window_Loaded">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="220"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Materias Primas" FontSize="26" FontWeight="Bold" Foreground="#a36b00"/>

        <!-- Formulario -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="16"
                BorderBrush="#FFDA94" BorderThickness="2" Margin="0,10,0,272" Grid.RowSpan="2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="260"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" VerticalAlignment="Top" Grid.ColumnSpan="2" Margin="0,0,519,0">
                    <TextBlock Text="Nombre:" Foreground="#5c3a00" Margin="0,4,0,2"/>
                    <TextBox Name="txtNombre" Height="30" Margin="0,0,0,8"
                             BorderBrush="#e2a42d" BorderThickness="1" Padding="4"/>

                    <TextBlock Text="Unidad (Kg, Unidades, etc.):" Foreground="#5c3a00" Margin="0,4,0,2"/>
                    <TextBox Name="txtUnidad" Height="30" Margin="0,0,0,8"
                             BorderBrush="#e2a42d" BorderThickness="1" Padding="4"/>

                    <TextBlock Text="Cantidad Disponible:" Foreground="#5c3a00" Margin="0,4,0,2"/>
                    <TextBox Name="txtCantidad" Height="30" Margin="0,0,0,8"
                             BorderBrush="#e2a42d" BorderThickness="1" Padding="4"/>

                    <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Name="btnAgregar" Content="Agregar" Width="100" Height="35" Margin="0,0,8,0"
                                Background="#e2a42d" Foreground="White" FontWeight="Bold"
                                Click="btnAgregar_Click"/>
                        <Button Name="btnEditar" Content="Editar" Width="100" Height="35" Margin="0,0,8,0"
                                Background="#e2a42d" Foreground="White" FontWeight="Bold"
                                Click="btnEditar_Click"/>
                        <Button x:Name="btnEliminar" Content="Eliminar" Width="100" Height="35"
                                Background="#ff6b6b" Foreground="White" FontWeight="Bold"
                                Click="btnEliminar_Click"/>
                    </StackPanel>
                </StackPanel>

                <TextBlock Grid.Column="1" Text="Administrá las materias primas: agregá, editá o eliminá." 
                           TextWrapping="Wrap" FontStyle="Italic" Foreground="#5c3a00" FontSize="14"
                           VerticalAlignment="Top" Margin="20,0,0,0"/>
            </Grid>
        </Border>

        <!-- DataGrid -->
        <DataGrid Name="dgvMateriaPrima" Grid.Row="2" AutoGenerateColumns="False" 
                  IsReadOnly="True" SelectionMode="Single" SelectionChanged="dgvMateriaPrima_SelectionChanged"
                  Margin="0,142,0,0" Background="White" BorderBrush="#e2a42d" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdMateria}" Width="60"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Unidad" Binding="{Binding Unidad}" Width="120"/>
                <DataGridTextColumn Header="Cantidad" Binding="{Binding CantidadDisponible}" Width="100"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
