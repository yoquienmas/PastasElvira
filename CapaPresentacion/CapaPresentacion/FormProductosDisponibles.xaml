<Window x:Class="CapaPresentacion.FormProductosDisponibles"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        Title="📦 PRODUCTOS DISPONIBLES" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#fff8e1"
        FontFamily="Georgia">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <!-- Estilos de alineación para texto -->
        <Style x:Key="CenterAlignedTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
        </Style>

        <Style x:Key="RightAlignedTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Right"/>
        </Style>

        <!-- Estilos mejorados para el DataGrid -->
        <Style x:Key="EnhancedDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#e0e0e0"/>
            <Setter Property="VerticalGridLinesBrush" Value="#e0e0e0"/>
            <Setter Property="RowBackground" Value="White"/>
            <Setter Property="AlternatingRowBackground" Value="#f8f9fa"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="SelectionUnit" Value="FullRow"/>
        </Style>

        <Style x:Key="DataGridHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#e2a42d"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderThickness" Value="0,0,1,0"/>
            <Setter Property="BorderBrush" Value="#d1941a"/>
        </Style>

        <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="BorderBrush" Value="#f0f0f0"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#e3f2fd"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Estilos específicos para la columna de Stock -->
        <Style x:Key="StockTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="5,2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding StockActual}" Value="0">
                    <Setter Property="Foreground" Value="#d32f2f"/>
                    <Setter Property="Background" Value="#ffebee"/>
                    <Setter Property="ToolTip" Value="Producto sin stock"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding StockActual}">
                    <DataTrigger.Value>
                        <sys:Int32>10</sys:Int32>
                    </DataTrigger.Value>
                    <Setter Property="Foreground" Value="#f57c00"/>
                    <Setter Property="Background" Value="#fff3e0"/>
                    <Setter Property="ToolTip" Value="Stock bajo"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding StockActual}">
                    <DataTrigger.Value>
                        <sys:Int32>10</sys:Int32>
                    </DataTrigger.Value>
                    <Setter Property="Foreground" Value="#2e7d32"/>
                    <Setter Property="Background" Value="#e8f5e8"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Estilo para la columna de Estado -->
        <Style x:Key="EstadoTextStyle" TargetType="TextBlock">
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="5,2"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding StockActual}" Value="0">
                    <Setter Property="Text" Value="SIN STOCK"/>
                    <Setter Property="Foreground" Value="#d32f2f"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding StockActual}">
                    <DataTrigger.Value>
                        <sys:Int32>10</sys:Int32>
                    </DataTrigger.Value>
                    <Setter Property="Text" Value="STOCK BAJO"/>
                    <Setter Property="Foreground" Value="#f57c00"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding StockActual}">
                    <DataTrigger.Value>
                        <sys:Int32>10</sys:Int32>
                    </DataTrigger.Value>
                    <Setter Property="Text" Value="DISPONIBLE"/>
                    <Setter Property="Foreground" Value="#2e7d32"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Border Background="White" CornerRadius="10" Padding="15"
                BorderBrush="#e2a42d" BorderThickness="2">
            <StackPanel>
                <!-- Header -->
                <Border Background="#e2a42d" Padding="10" CornerRadius="5" Margin="0,0,0,10">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📦 LISTA COMPLETA DE PRODUCTOS DISPONIBLES" 
                              Foreground="White" FontWeight="Bold" FontSize="16" VerticalAlignment="Center"/>
                        <Button Content="🔄 Actualizar" Click="btnActualizar_Click" 
                                Background="#4CAF50" Foreground="White" Margin="20,0,0,0"/>
                        <Button Content="📊 Exportar" Click="btnExportar_Click" 
                                Background="#2196F3" Foreground="White" Margin="5,0,0,0"/>
                        <Button Content="❌ Cerrar" Click="btnCerrar_Click" 
                                Background="#f44336" Foreground="White" Margin="5,0,0,0"/>
                    </StackPanel>
                </Border>

                <!-- Filtros SIMPLIFICADOS - Sin estilos personalizados -->
                <Border Background="#f5f5f5" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                    <WrapPanel>
                        <TextBlock Text="Filtrar por:" VerticalAlignment="Center" FontWeight="Bold" Margin="0,0,10,0"/>
                        <TextBox x:Name="txtFiltroNombre" Width="200" Margin="5" 
                                TextChanged="txtFiltro_TextChanged" 
                                ToolTip="Filtrar por nombre de producto"/>
                        <ComboBox x:Name="cmbFiltroTipo" Width="150" Margin="5"
                                 SelectionChanged="cmbFiltro_SelectionChanged"
                                 ToolTip="Filtrar por tipo">
                            <ComboBoxItem Content="Todos los tipos" IsSelected="True"/>
                        </ComboBox>
                        <ComboBox x:Name="cmbFiltroStock" Width="150" Margin="5"
                                 SelectionChanged="cmbFiltro_SelectionChanged"
                                 ToolTip="Filtrar por estado de stock">
                            <ComboBoxItem Content="Todo el stock" IsSelected="True"/>
                            <ComboBoxItem Content="Con stock"/>
                            <ComboBoxItem Content="Sin stock"/>
                            <ComboBoxItem Content="Stock bajo"/>
                        </ComboBox>
                        <Button Content="🧹 Limpiar Filtros" Click="btnLimpiarFiltros_Click"
                               Background="#FF9800" Foreground="White"/>
                    </WrapPanel>
                </Border>

                <!-- Estadísticas -->
                <WrapPanel Margin="0,0,0,10" HorizontalAlignment="Center">
                    <Border Background="#e8f5e8" CornerRadius="5" Padding="10" Margin="5">
                        <TextBlock>
                            <Run Text="Total productos: " FontWeight="Bold"/>
                            <Run x:Name="txtTotalProductos" Text="0" Foreground="#2e7d32"/>
                        </TextBlock>
                    </Border>
                    <Border Background="#e3f2fd" CornerRadius="5" Padding="10" Margin="5">
                        <TextBlock>
                            <Run Text="Con stock: " FontWeight="Bold"/>
                            <Run x:Name="txtConStock" Text="0" Foreground="#1976d2"/>
                        </TextBlock>
                    </Border>
                    <Border Background="#fff3e0" CornerRadius="5" Padding="10" Margin="5">
                        <TextBlock>
                            <Run Text="Sin stock: " FontWeight="Bold"/>
                            <Run x:Name="txtSinStock" Text="0" Foreground="#f57c00"/>
                        </TextBlock>
                    </Border>
                    <Border Background="#ffebee" CornerRadius="5" Padding="10" Margin="5">
                        <TextBlock>
                            <Run Text="Stock bajo: " FontWeight="Bold"/>
                            <Run x:Name="txtStockBajo" Text="0" Foreground="#d32f2f"/>
                        </TextBlock>
                    </Border>
                </WrapPanel>

                <!-- Grid de productos MEJORADO -->
                <Border Background="White" CornerRadius="8" Padding="0"
                       BorderBrush="#ddd" BorderThickness="1" Margin="0,0,0,10">
                    <DataGrid x:Name="dgvProductos" 
                             Style="{StaticResource EnhancedDataGridStyle}"
                             ColumnHeaderStyle="{StaticResource DataGridHeaderStyle}"
                             CellStyle="{StaticResource DataGridCellStyle}"
                             Height="300"
                             SelectionChanged="DgvProductos_SelectionChanged">
                        <DataGrid.Columns>
                            <!-- ID Producto -->
                            <DataGridTextColumn Header="🔤 ID" 
                                              Binding="{Binding IdProducto}" 
                                              Width="250"
                                              ElementStyle="{StaticResource CenterAlignedTextStyle}"/>

                            <!-- Nombre Producto -->
                            <DataGridTextColumn Header="📝 PRODUCTO" 
                                              Binding="{Binding Nombre}" 
                                              Width="250"/>

                            <!-- Tipo -->
                            <DataGridTextColumn Header="🏷️ TIPO" 
                                              Binding="{Binding Tipo}" 
                                              Width="250"/>

                            <!-- Precio Venta -->
                            <DataGridTextColumn Header="💰 PRECIO" 
                                              Binding="{Binding PrecioVenta, StringFormat=C}" 
                                              Width="250"
                                              ElementStyle="{StaticResource RightAlignedTextStyle}"/>

                            <!-- Stock Actual -->
                            <DataGridTextColumn Header="📊 STOCK" 
                                              Binding="{Binding StockActual}" 
                                              Width="250"
                                              ElementStyle="{StaticResource StockTextStyle}"/>
                          
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <!-- Información del producto seleccionado -->
                <Border Background="#f0f8ff" CornerRadius="5" Padding="10" Margin="0,10,0,0"
                       BorderBrush="#87ceeb" BorderThickness="1" Visibility="Collapsed" x:Name="borderDetalle">
                    <StackPanel>
                        <TextBlock Text="📋 INFORMACIÓN DETALLADA DEL PRODUCTO" FontWeight="Bold" Foreground="#1e88e5" Margin="0,0,0,5"/>
                        <WrapPanel>
                            <TextBlock x:Name="txtDetalleNombre" FontWeight="Bold" Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtDetallePrecio" Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtDetalleStock" Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtDetalleTipo"/>
                        </WrapPanel>
                        <WrapPanel Margin="0,5,0,0">
                            <TextBlock x:Name="txtDetalleCosto" Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtDetalleMargen" Margin="0,0,10,0"/>
                            <TextBlock x:Name="txtDetalleVisible"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Border>
    </Grid>
</Window>