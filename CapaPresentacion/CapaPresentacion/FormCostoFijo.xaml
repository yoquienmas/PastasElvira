<Window x:Class="CapaPresentacion.FormCostoFijo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Costos Fijos de Producción" Height="650" Width="1000"
        Background="#fff8e1" FontFamily="Georgia"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Window.Resources>
        <Style x:Key="DataGridRowStyle" TargetType="{x:Type DataGridRow}">
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#ffe0b2"/>
                    <Setter Property="Foreground" Value="Black"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <DockPanel>
            <Border DockPanel.Dock="Top" Background="#d4a36b" Padding="15" Margin="0,0,0,10">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock Text="💰 GESTIÓN DE COSTOS FIJOS DE PRODUCCIÓN" FontSize="22" FontWeight="Bold"
                               Foreground="#5c3a00" VerticalAlignment="Center"/>
                </StackPanel>
            </Border>

            <Grid Margin="20,0,20,20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="White" CornerRadius="12" Padding="20"
                            BorderBrush="#e2a42d" BorderThickness="2" Margin="0,0,20,20">
                        <StackPanel>
                            <TextBlock Text="Agregar/Editar Costo Fijo" FontSize="18" FontWeight="Bold" Foreground="#a36b00" Margin="0,0,0,15"/>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Concepto:" Grid.Row="0" Grid.Column="0" Margin="0,5,10,10" VerticalAlignment="Center" Foreground="#5c3a00"/>
                                <TextBox x:Name="txtConcepto" Grid.Row="0" Grid.Column="1" Margin="0,0,0,10" Height="30"/>

                                <TextBlock Text="Monto ($):" Grid.Row="1" Grid.Column="0" Margin="0,5,10,10" VerticalAlignment="Center" Foreground="#5c3a00"/>
                                <TextBox x:Name="txtMonto" Grid.Row="1" Grid.Column="1" Margin="0,0,0,10" Height="30" Width="150" HorizontalAlignment="Left"/>

                                <CheckBox x:Name="chkActivo" Grid.Row="2" Grid.Column="1" Content="Costo activo" Margin="0,5,0,10"
                                          Foreground="#5c3a00" FontWeight="Bold" HorizontalAlignment="Left"/>

                                <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,15,0,0" HorizontalAlignment="Right">
                                    <Button x:Name="btnNuevo" Content="➕ Nuevo" Width="100" Height="35" Margin="0,0,10,0"
                                            Background="#4CAF50" Foreground="White" FontWeight="Bold"
                                            Click="btnNuevo_Click"/>
                                    <Button x:Name="btnGuardar" Content="💾 Guardar" Width="100" Height="35" Margin="0,0,10,0"
                                            Background="#2196F3" Foreground="White" FontWeight="Bold"
                                            Click="btnGuardar_Click"/>
                                    <Button x:Name="btnEliminar" Content="🗑️ Eliminar" Width="100" Height="35"
                                            Background="#ff6b6b" Foreground="White" FontWeight="Bold"
                                            Click="btnEliminar_Click"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <StackPanel Grid.Column="1" Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top">
                        <Border Background="#e8f5e8" CornerRadius="10" Padding="15" Margin="0,0,0,10" Width="250">
                            <StackPanel>
                                <TextBlock Text="📊 Total de Costos" FontWeight="Bold" Foreground="#2e7d32" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtTotalCostos" FontSize="18" Foreground="#2e7d32" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                        <Border Background="#fff3e0" CornerRadius="10" Padding="15" Width="250">
                            <StackPanel>
                                <TextBlock Text="✅ Costos Fijos Activos" FontWeight="Bold" Foreground="#f57c00" HorizontalAlignment="Center"/>
                                <TextBlock x:Name="txtCostosActivos" FontSize="18" Foreground="#f57c00" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>

                <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20"
                        BorderBrush="#e2a42d" BorderThickness="2" Margin="0,0,0,20">
                    <DataGrid x:Name="dgvCostosFijos" AutoGenerateColumns="False" IsReadOnly="True"
                              SelectionMode="Single" SelectionChanged="dgvCostosFijos_SelectionChanged"
                              Background="White" BorderThickness="0"
                              RowStyle="{StaticResource DataGridRowStyle}" AlternatingRowBackground="#fefde2"
                              GridLinesVisibility="Horizontal">
                        <DataGrid.Resources>
                            <Style TargetType="{x:Type DataGridColumnHeader}">
                                <Setter Property="Background" Value="#f1c40f"/>
                                <Setter Property="Foreground" Value="#5c3a00"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                                <Setter Property="Padding" Value="10,5"/>
                                <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            </Style>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                                <Setter Property="Margin" Value="5,0"/>
                            </Style>
                        </DataGrid.Resources>
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding IdCosto}" Width="50">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="Concepto" Binding="{Binding Concepto}" Width="*"/>
                            <DataGridTextColumn Header="Monto" Binding="{Binding Monto, StringFormat=C}" Width="120">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="HorizontalAlignment" Value="Right"/>
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridCheckBoxColumn Header="Activo" Binding="{Binding Activo}" Width="80">
                                <DataGridCheckBoxColumn.ElementStyle>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="HorizontalAlignment" Value="Center"/>
                                    </Style>
                                </DataGridCheckBoxColumn.ElementStyle>
                            </DataGridCheckBoxColumn>
                            <DataGridTemplateColumn Header="Acciones" Width="120">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <Button Content="Toggle Estado" Click="BtnToggleEstado_Click"
                                                Background="#FF9800" Foreground="White" Padding="5,2" FontSize="10"
                                                ToolTip="Cambiar estado Activo/Inactivo de este costo"/>
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Border>

                <Border Grid.Row="2" Background="#f5f5f5" CornerRadius="8" Padding="15" Margin="0,10,0,0"
                        BorderBrush="#e2e2e2" BorderThickness="1">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnRecalcularCostos" Content="🔄 Recalcular Todos los Precios" Width="280" Height="40"
                                Background="#9C27B0" Foreground="White" FontWeight="Bold" FontSize="14"
                                Click="btnRecalcularCostos_Click" ToolTip="Recalcula los precios de venta de todos los productos basado en los costos fijos y variables actuales."/>
                        <TextBlock x:Name="txtImpactoInfo" Margin="30,0,0,0" TextWrapping="Wrap" Width="400"
                                   Foreground="#5c3a00" FontStyle="Italic" VerticalAlignment="Center"
                                   Text="Información sobre el impacto del recalculo de precios aparecerá aquí."/>
                    </StackPanel>
                </Border>
            </Grid>
        </DockPanel>
    </Grid>
</Window>