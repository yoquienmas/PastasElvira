<Window x:Class="CapaPresentacion.FormCliente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Gestión de Clientes" Height="600" Width="800"
        Background="#fff8e1" FontFamily="Georgia"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="GESTIÓN DE CLIENTES" FontSize="24" FontWeight="Bold" Foreground="#a36b00"
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- Formulario de Cliente -->
        <Border Grid.Row="1" Background="White" CornerRadius="12" Padding="20"
                BorderBrush="#e2a42d" BorderThickness="2" Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Fila 0 -->
                <!-- Nombre -->
                <TextBlock Text="Nombre:" Grid.Row="0" Grid.Column="0" Margin="0,0,10,10" Foreground="#5c3a00"/>
                <TextBox x:Name="txtNombre" Grid.Row="0" Grid.Column="1" Margin="0,0,10,10" Height="30"/>

                <!-- Documento -->
                <TextBlock Text="Documento:" Grid.Row="0" Grid.Column="2" Margin="10,0,10,10" Foreground="#5c3a00"/>
                <TextBox x:Name="txtDocumento" Grid.Row="0" Grid.Column="3" Margin="0,0,0,10" Height="30"/>

                <!-- Fila 1 -->
                <!-- Apellido -->
                <TextBlock Text="Apellido:" Grid.Row="1" Grid.Column="0" Margin="0,0,10,10" Foreground="#5c3a00"/>
                <TextBox x:Name="txtApellido" Grid.Row="1" Grid.Column="1" Margin="0,0,10,10" Height="30"/>

                <!-- Email -->
                <TextBlock Text="Email:" Grid.Row="1" Grid.Column="2" Margin="10,0,10,10" Foreground="#5c3a00"/>
                <TextBox x:Name="txtEmail" Grid.Row="1" Grid.Column="3" Margin="0,0,0,10" Height="30"/>

                <!-- Fila 2 -->
                <!-- Teléfono -->
                <TextBlock Text="Teléfono:" Grid.Row="2" Grid.Column="0" Margin="0,0,10,10" Foreground="#5c3a00"/>
                <TextBox x:Name="txtTelefono" Grid.Row="2" Grid.Column="1" Margin="0,0,10,10" Height="30"/>

                <!-- CUIL -->
                <TextBlock Text="CUIL:" Grid.Row="2" Grid.Column="2" Margin="10,0,10,10" Foreground="#5c3a00"/>
                <TextBox x:Name="txtCuil" Grid.Row="2" Grid.Column="3" Margin="0,0,0,10" Height="30" TextChanged="txtCuil_TextChanged"/>

                <!-- Fila 3 -->
                <!-- Dirección -->
                <TextBlock Text="Dirección:" Grid.Row="3" Grid.Column="0" Margin="0,0,10,10" Foreground="#5c3a00"/>
                <TextBox x:Name="txtDireccion" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="0,0,0,10" Height="30"/>

                <!-- Fila 4 - Botones -->
                <StackPanel Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" 
                            Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
                    <Button x:Name="btnNuevo" Content="Nuevo" Width="80" Height="35" Margin="0,0,10,0"
                            Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="btnNuevo_Click"/>
                    <Button x:Name="btnGuardar" Content="Guardar" Width="80" Height="35" Margin="0,0,10,0"
                            Background="#2196F3" Foreground="White" FontWeight="Bold" Click="btnGuardar_Click"/>
                    <Button x:Name="btnEditar" Content="Editar" Width="80" Height="35" Margin="0,0,10,0"
                            Background="#FF9800" Foreground="White" FontWeight="Bold" Click="btnEditar_Click"/>
                    <Button x:Name="btnEliminar" Content="Eliminar" Width="80" Height="35"
                            Background="#ff6b6b" Foreground="White" FontWeight="Bold" Click="btnEliminar_Click"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Lista de Clientes -->
        <DataGrid x:Name="dgvClientes" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True"
                  SelectionMode="Single" SelectionChanged="dgvClientes_SelectionChanged"
                  Background="White" BorderBrush="#e2a42d" BorderThickness="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding IdCliente}" Width="50"/>
                <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                <DataGridTextColumn Header="Apellido" Binding="{Binding Apellido}" Width="*"/>
                <DataGridTextColumn Header="Documento" Binding="{Binding Documento}" Width="120"/>
                <DataGridTextColumn Header="Teléfono" Binding="{Binding Telefono}" Width="120"/>
                <DataGridTextColumn Header="Email" Binding="{Binding Email}" Width="150"/>
                <DataGridTextColumn Header="CUIL" Binding="{Binding Cuil}" Width="120"/>
                <DataGridTextColumn Header="Dirección" Binding="{Binding Direccion}" Width="200"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>