<Window x:Class="CapaPresentacion.FormReportes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Sistema de Reportes - Pastas Elvira" Height="700" Width="1000"
        Background="#fff8e1"
        FontFamily="Georgia"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded">

    <Border Background="White" CornerRadius="12" Padding="20"
            BorderBrush="#e2a42d" BorderThickness="2" Margin="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="📊 SISTEMA DE REPORTES" FontSize="24" FontWeight="Bold"
                       Foreground="#a36b00" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <GroupBox Header="TIPO DE REPORTE" Grid.Row="1" FontWeight="Bold" Foreground="#a36b00">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Seleccionar Reporte:" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="#5c3a00"/>
                    <ComboBox x:Name="cboTipoReporte" Width="300" SelectionChanged="cboTipoReporte_SelectionChanged">
                        <ComboBoxItem Content="Consumo Materia Prima"/>
                        <ComboBoxItem Content="Ventas por Fecha"/>
                        <ComboBoxItem Content="Ventas por Cliente"/>
                        <ComboBoxItem Content="Stock Crítico"/>
                        <ComboBoxItem Content="Inventario Completo"/>
                    </ComboBox>
                </StackPanel>
            </GroupBox>

            <Grid Grid.Row="2" Margin="0,20,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <GroupBox Header="FILTROS" Grid.Column="0" FontWeight="Bold" Foreground="#a36b00">
                    <StackPanel x:Name="panelFiltros" Orientation="Vertical" Margin="10">
                        <!-- Filtros generales (Fecha) -->
                        <StackPanel x:Name="panelFiltrosFecha" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Visible">
                            <TextBlock Text="Fecha Inicio:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#5c3a00"/>
                            <DatePicker x:Name="dtpFechaInicio" Width="120" Margin="0,0,15,0"/>
                            <TextBlock Text="Fecha Fin:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#5c3a00"/>
                            <DatePicker x:Name="dtpFechaFin" Width="120" Margin="0,0,15,0"/>
                        </StackPanel>

                        <!-- Filtros específicos para Ventas por Cliente -->
                        <StackPanel x:Name="panelFiltrosCliente" Orientation="Horizontal" Margin="0,0,0,10" Visibility="Collapsed">
                            <TextBlock Text="Cliente:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#5c3a00"/>
                            <ComboBox x:Name="cboClientes" Width="200" DisplayMemberPath="Nombre" SelectedValuePath="IdCliente"
                                      Margin="0,0,15,0"/>

                            <TextBlock Text="DNI:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#5c3a00"/>
                            <TextBox x:Name="txtFiltroDNI" Width="120" Margin="0,0,15,0" 
                                     KeyDown="TxtFiltroDNI_KeyDown" ToolTip="Buscar por DNI del cliente"/>

                            <TextBlock Text="Producto:" VerticalAlignment="Center" Margin="0,0,5,0" Foreground="#5c3a00"/>
                            <TextBox x:Name="txtFiltroProducto" Width="200" Margin="0,0,15,0" 
                                     KeyDown="TxtFiltroProducto_KeyDown" ToolTip="Buscar por nombre de producto"/>
                        </StackPanel>

                        <!-- Botones de acción -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                            <Button x:Name="btnGenerarReporte" Content="Generar Reporte" Width="120" Height="35"
                                    Background="#2196F3" Foreground="White" FontWeight="Bold" Click="btnGenerarReporte_Click"/>
                            <Button x:Name="btnLimpiarFiltros" Content="Limpiar Filtros" Width="120" Height="35" Margin="10,0,0,0"
                                    Background="#FF9800" Foreground="White" Click="BtnLimpiarFiltros_Click"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="ESTADÍSTICAS RÁPIDAS" Grid.Column="1" FontWeight="Bold" Foreground="#a36b00" Margin="20,0,0,0">
                    <StackPanel Orientation="Vertical">
                        <Border Background="#e8f5e8" CornerRadius="8" Padding="10" Margin="0,0,0,10">
                            <TextBlock x:Name="txtVentasHoy" FontSize="12" FontWeight="Bold" Foreground="#2e7d32"/>
                        </Border>
                        <Border Background="#fff3e0" CornerRadius="8" Padding="10">
                            <TextBlock x:Name="txtStockCritico" FontSize="12" FontWeight="Bold" Foreground="#f57c00"/>
                        </Border>
                    </StackPanel>
                </GroupBox>
            </Grid>
            <GroupBox Header="RESULTADOS DEL REPORTE" Grid.Row="3" Margin="0,10,0,0" FontWeight="Bold" Foreground="#a36b00">
                <TabControl x:Name="tcMain" Background="White" BorderBrush="#e2a42d" BorderThickness="2" Margin="5">
                    <TabItem Header="📋 Vista de Datos">
                        <Border Background="White" CornerRadius="10" Padding="5" BorderBrush="#e2a42d" BorderThickness="2">
                            <DataGrid x:Name="dgvReporte" AutoGenerateColumns="False" IsReadOnly="True"
                          Background="White" BorderThickness="0" SelectionChanged="dgvReporte_SelectionChanged">
                                <DataGrid.Columns>
                                    <!-- Las columnas se configurarán dinámicamente en el código -->
                                </DataGrid.Columns>
                            </DataGrid>
                        </Border>
                    </TabItem>
                    <TabItem Header="📈 Resumen">
                        <ScrollViewer>
                            <StackPanel x:Name="panelResumen" Margin="20"/>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </GroupBox>

            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="📄 Exportar a Excel" Width="150" Height="35" Margin="0,0,10,0"
                        Background="#4CAF50" Foreground="White" FontWeight="Bold" Click="btnExportarExcel_Click"/>
                <Button Content="🖨️ Imprimir" Width="100" Height="35"
                        Background="#2196F3" Foreground="White" FontWeight="Bold" Click="btnImprimir_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>